{
  "name": "@hmcts/web",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -r \"yarn:dev:watch\" \"yarn:build:dev:watch\"",
    "dev:watch": "mkdir -p dist/assets; nodemon -w yarn.lock -w dist/assets -w src -w ../../libs -e 'json,ts,scss,js,css' -x tsx src/server.ts",
    "dev:nowatch": "yarn build:dev && tsx src/server.ts",
    "build:dev:watch": "NODE_OPTIONS='--import tsx' vite build --watch",
    "build:dev": "NODE_OPTIONS='--import tsx' vite build",
    "build": "tsc && vite build --configLoader runner",
    "clean": "rm -rf dist",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "dependencies": {
    "@hmcts/cloud-native-platform": "workspace:*",
    "@hmcts/cookie-manager": "1.1.0",
    "@hmcts/express-govuk-starter": "workspace:*",
    "@hmcts/footer-pages": "workspace:*",
    "@hmcts/postgres": "workspace:*",
    "@hmcts/simple-router": "workspace:*",
    "compression": "1.8.1",
    "config": "4.1.1",
    "connect-redis": "9.0.0",
    "cookie-parser": "1.4.7",
    "express": "5.1.0",
    "express-session": "1.18.2",
    "glob": "11.0.3",
    "govuk-frontend": "5.12.0",
    "helmet": "8.1.0",
    "nunjucks": "3.2.4",
    "redis": "5.8.2"
  },
  "devDependencies": {
    "@types/compression": "1.8.1",
    "@types/config": "3.3.5",
    "@types/cookie-parser": "1.4.9",
    "@types/express": "5.0.3",
    "@types/express-session": "1.18.2",
    "@types/govuk-frontend": "5.11.0",
    "@types/nunjucks": "3.2.6",
    "@types/supertest": "6.0.3",
    "concurrently": "9.2.1",
    "nodemon": "3.1.10",
    "sass": "1.93.0",
    "supertest": "7.1.4",
    "vite": "7.1.7",
    "vite-plugin-static-copy": "3.1.2"
  }
}
