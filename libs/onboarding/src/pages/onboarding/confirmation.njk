{% extends "layouts/base.njk" %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block page_title %}{{ title }}{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {{ govukPanel({
        titleText: title,
        html: referenceText + '<br><strong>' + referenceNumber + '</strong>'
      }) }}

      <h2 class="govuk-heading-m">{{ nextStepsTitle }}</h2>

      {% for content in nextStepsContent %}
        <p class="govuk-body">{{ content }}</p>
      {% endfor %}

      <p class="govuk-body">
        <a href="/onboarding/name" class="govuk-link">{{ startAgainText }}</a>
      </p>

      <p class="govuk-body">
        <a href="/" class="govuk-link">Return to homepage</a>
      </p>

    </div>
  </div>
{% endblock %}